<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="leftcol">
        <field
            name="id"
            type="hidden"
            label="JGLOBAL_FIELD_ID_LABEL"
            description="JBLOBAL_FIELD_ID_DESC"
            size="10"
            default="0"
            readonly="true"
            class="readonly"
        />
        <field
            name="name"
            type="text"
            label="COM_JOMOEASYRESTAURANTMENU_NAME"            
            size="40"
            class="inputbox"
            required="true"
        />
        <field 
            name="menu_id" 
            type="MenuSelect" 
            label="COM_JOMOEASYRESTAURANTMENU_MENU"
            required="true" />
        <field
            name="description"
            type="textarea"
            label="COM_JOMOEASYRESTAURANTMENU_DESC"            
            rows="10"
            cols="100"
            class="inputbox"
            filter="nohtml"
            required="true"
        />      
    </fieldset>
    <fieldset name="rightcol">  
        <field name="layout" type="list" default="1"
               label="COM_JOMOEASYRESTAURANTMENU_LAYOUT"
               description="COM_JOMOEASYRESTAURANTMENU_LAYOUT_DESC"
        >
            <option value="1">COM_JOMOEASYRESTAURANTMENU_ONECOL</option>
            <option value="2">COM_JOMOEASYRESTAURANTMENU_TWOCOL</option>
        </field>
        <field
            name="published"
            type="list"
            label="JSTATUS"
            descritpion="JFIELD_PUBLISHED_DESC"
            class="inputbox"
            filter="intval"
            size="1"
            default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
    </fieldset>
</form>