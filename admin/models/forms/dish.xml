<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="leftcol">
        <field
            name="id"
            type="hidden"
            label="JGLOBAL_FIELD_ID_LABEL"
            description="JBLOBAL_FIELD_ID_DESC"
            size="10"
            default="0"
            readonly="true"
            class="readonly"
        />
        <field
            name="name"
            type="text"
            label="COM_JOMOEASYRESTAURANTMENU_NAME"
            size="40"
            class="inputbox"
            required="true"
        />
        <field 
            name="category_id" 
            type="CategorySelect" 
            label="JCATEGORY"
            description="JFIELD_CATEGORY_DESC"
            required="true" />        
        <field
            name="price"
            type="text"
            label="COM_JOMOEASYRESTAURANTMENU_PRICE"
            description="COM_JOMOEASYRESTAURANTMENU_PRICE_DESC"
            size="9"
            class="inputbox"
            required="false"
        />
        <field
            name="description"
            type="textarea"
            label="COM_JOMOEASYRESTAURANTMENU_DESC"         
            rows="10"
            cols="100"
            class="inputbox"
            filter="nohtml"
            required="true"
        />      
        <field 
            name="dish_img" 
            type="media"
            hide_none="1" 
            label="COM_JOMOEASYRESTAURANTMENU_IMAGE_SELECT"
            size="40"
            description="COM_JOMOEASYRESTAURANTMENU_IMAGE_SELECT_DESC" 
        />        
        <field 
            name="dish_icon" 
            type="imagelist" 
            default="" 
            label="COM_JOMOEASYRESTAURANTMENU_ICON_SELECT" 
            description="COM_JOMOEASYRESTAURANTMENU_ICON_SELECT_DESC" 
            directory="media/com_jomoeasyrestaurantmenu/icons" 
            exclude="" 
            stripext="" />        
    </fieldset>
    <fieldset name="rightcol">  
        <field
            name="published"
            type="list"
            label="JSTATUS"
            descritpion="JFIELD_PUBLISHED_DESC"
            class="inputbox"
            filter="intval"
            size="1"
            default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
    </fieldset>
</form>